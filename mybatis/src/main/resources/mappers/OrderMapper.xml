<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="spring_study.mybatis.mapper.OrderMapper">
    <insert id="insertOrder" parameterType="spring_study.mybatis.entity.Order" useGeneratedKeys="true" keyProperty="id" >
        INSERT INTO ORDERS (user_id, status) VALUES (#{userId}, #{status});
    </insert>

    <select id="findOrdersByUserId" resultType="spring_study.mybatis.dto.OrderSummaryDto">
        SELECT
            o.id as orderId,
            (SELECT p.name FROM ORDER_ITEMS oi
                                    JOIN PRODUCTS p ON oi.product_id = p.id
             WHERE oi.order_id = o.id
             ORDER BY oi.quantity
                LIMIT 1) as orderName,
            o.status as orderStatus,
            o.order_date as orderDate,
            (SELECT count(*) FROM ORDER_ITEMS oi WHERE o.id = oi.order_id) as totItemCnt
        FROM ORDERS o
        WHERE o.user_id = #{id}
        ORDER BY o.order_date DESC;
    </select>
    
    <resultMap id="orderDetailsResultMap" type="spring_study.mybatis.dto.OrderDetailDto">
        <id column="order_id" property="orderId"/>
        <result column="order_status" property="orderStatus"/>
        <result column="order_date" property="orderDate" javaType="java.sql.Timestamp"/>
        
        <association property="user" javaType="spring_study.mybatis.entity.User">
            <id column="user_id" property="id"/>
            <result column="user_name" property="userName"/>
            <result column="user_age" property="age"/>
            <result column="user_email" property="email"/>
        </association>

        <collection property="orderItemList" ofType="spring_study.mybatis.dto.OrderItemDetail">
            <id column="product_id" property="productId"/>
            <result column="product_name" property="productName"/>
            <result column="product_price" property="price"/>
            <result column="order_item_quantity" property="quantity"/>
        </collection>
    </resultMap>
    
    <select id="findDetailOrderByOrderId" resultMap="orderDetailsResultMap">
        SELECT
            o.id AS order_id,
            o.status AS order_status,
            o.order_date AS order_date,
            o.user_id AS user_id,
            u.user_name AS user_name,
            u.age AS user_age,
            u.email AS user_email,
            p.id AS product_id,
            p.name AS product_name,
            oi.quantity AS order_item_quantity,
            p.price AS product_price
        FROM ORDERS o
        JOIN USERS u ON o.user_id = u.id
        JOIN ORDER_TIMES oi ON o.id = oi.order_id
        JOIN PRODUCTS p ON oi.product_id = p.id
        WHERE o.id = #{orderId};
    </select>
</mapper>