<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="spring_study.mybatis.mapper.UserMapper">

    <select id="findAllUsers" resultType="spring_study.mybatis.dto.User">
        SELECT id, user_name, age, email
        FROM USERS
    </select>

    <insert id="insertUser" parameterType="spring_study.mybatis.dto.User" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO USERS (user_name, age, email) VALUES (#{userName}, #{age}, #{email})
    </insert>
</mapper>